<div class="container mt-3">
  <div class="row row-cols-4">
    <% @boats.each do |boat| %>
      <div class="col">
        <div class="card mb-3 mt-3" style="max-width: 540px;">
        <%= link_to boat_path(boat) do %>
          <img src="https://electrek.co/wp-content/uploads/sites/3/2021/09/duck-boat-header.jpg" class="card-img-top" alt="boat parked">
        <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= boat.name %></h5>
            <p class="card-text"><%= boat.description %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Location: <%= boat.location %></li>
            <li class="list-group-item">Capacity: <%= boat.capacity %></li>
            <li class="list-group-item">Price: <%= boat.price_per_day %></li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>
