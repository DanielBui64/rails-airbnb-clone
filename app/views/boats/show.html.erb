<div class="container">
  <div class="row">
    <div class="col-12">
      <h1><%= @boat.name %></h1>
      <p><%= @boat.location %></p>
    </div>
    <div class="col-8">
      <div id="boatImagesCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#boatImagesCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#boatImagesCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#boatImagesCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="https://electrek.co/wp-content/uploads/sites/3/2021/09/duck-boat-header.jpg" class="d-block w-100" alt="duck boat">
          </div>
          <div class="carousel-item">
            <img src="https://electrek.co/wp-content/uploads/sites/3/2021/09/duck-boat-header.jpg" class="d-block w-100" alt="duck boat">
          </div>
          <div class="carousel-item">
            <img src="https://electrek.co/wp-content/uploads/sites/3/2021/09/duck-boat-header.jpg" class="d-block w-100" alt="duck boat">
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#boatImagesCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#boatImagesCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>

      <ul class="list-group list-group-flush">
        <li class="list-group-item d-flex justify-content-between align-items-start">
          <div class="ms-2 me-auto">
            <div class="fw-bold">Description: </div>
            <%= @boat.description %>
          </div>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-start">
          <div class="ms-2 me-auto">
            <div class="fw-bold">Location: </div>
            <%= @boat.location %>
          </div>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-start">
          <div class="ms-2 me-auto">
            <div class="fw-bold">Capacity: </div>
            <%= @boat.capacity %>
          </div>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-start">
          <div class="ms-2 me-auto">
            <div class="fw-bold">Price: </div>
            $<%= @boat.price_per_day %>/day
          </div>
        </li>
      </ul>
    </div>
    <div class="col-4">
    <div class="card" style="width: 18rem;">
      <div class="card-body">
          <h5 class="card-title">$<%= @boat.price_per_day %>/day</h5>
          <h6 class="card-subtitle mb-2 text-muted">Provided by <%= @boat.user.first_name %></h6>

          <p class="card-text">Start Date</p>
          <div class="input-group date" id="datepicker">
            <input type="text" class="form-control" placeholder="YYYY/MM/DD" id="datePicker"/>
            <span class="input-group-append">
              <span class="input-group-text bg-light d-block">
                <i class="fa fa-calendar"></i>
              </span>
            </span>
          </div>
          <br>
          <p class="card-text">End Date</p>
          <div class="input-group date" id="datepicker">
            <input type="text" class="form-control" placeholder="YYYY/MM/DD" id="datePicker"/>
            <span class="input-group-append">
              <span class="input-group-text bg-light d-block">
                <i class="fa fa-calendar"></i>
              </span>
            </span>
          </div>
          <br>
          <div class="d-grid gap-2 col-12 mx-auto">
            <button type="button" class="btn btn-success">Book Now</button>
            <button class="btn btn-secondary" type="button">Contact <%= @boat.user.first_name %></button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
